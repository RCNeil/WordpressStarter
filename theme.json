{
    "version": 2,
    "settings": {
		"layout": {
			"contentSize": "968px",
			"wideSize": "1280px"
		},
	    	"appearanceTools" : true,
		"spacing": {
			"blockGap" : true,
			"margin": true,
			"padding": true,
			"units": [ "rem", "px", "%"]
		},
		"border": {
			"customColor": true,
			"customRadius": true,
			"customStyle": true,
			"customWidth": true
		},
		"color": {
			"palette": [
				{
					"slug": "primary",
					"color": "#016FB9",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#6d8ea0",
					"name": "Secondary"
				},
				{
					"slug": "accent",
					"color": "#22aed1",
					"name": "Accent"
				},
				{
					"slug": "gray",
					"color": "#f2f2f2",
					"name": "Gray"
				}
			]
		},
		"typography": {
			"lineHeight": true,
			"fontSizes": [
				{
					"slug": "small",
					"size": "0.85rem",
					"name": "Small"
				},
				{
					"slug": "medium",
					"size": "1.25rem",
					"name": "medium"
				},
				{
					"slug": "large",
					"size": "1.75rem",
					"name": "Large"
				},
				{
					"slug": "x-large",
					"size": "2.5rem",
					"name": "X-Large"
				}
			]
		}
	},
	"styles" : {
		"blocks": {
			"core/button": {
				"border": {
					"radius": "0px",
					"color" : "var(--wp--preset--color--primary)"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "#ffffff"
				},
				":hover": {
					"typography": {
						"textDecoration": "none"
					},
					"color": {
						"background": "var(--wp--preset--color--accent)",
						"text": "#ffffff"
					}
				}
			}
		}, 
		"elements": {
			"button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "#ffffff"
				},
				":hover": {
					"typography": {
						"textDecoration": "none"
					},
					"color": {
						"background": "var(--wp--preset--color--accent)",
						"text": "#ffffff"
					}
				}
			}
		}
	},
	"blocks": {
		"core/heading": {
			"spacing": {
				"margin": true
			}
		},
		"core/cover": {
			"minHeight" : 300,
			"minHeightUnit": "px"
		}
	}
}
